{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "packages/web/dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  },
  "functions": [
    {
      "source": "packages/functions",
      "runtime": "nodejs22",
      "codebase": "default",
      "ignore": ["package.json", "node_modules", "src", "*.log", "*.local"]
    }
  ]
}
